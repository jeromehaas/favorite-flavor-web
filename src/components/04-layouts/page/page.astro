---
import "@/styles/main.scss";
import "./page.scss";
import { SITE } from "@configs";
import Header from "@components/03-organisms/header/header.astro";
import CookieBanner from "@components/03-organisms/cookie-banner/cookie-banner.astro";
import Footer from "@components/03-organisms/footer/footer.astro";

const { title = SITE.title, author = SITE.author, description = SITE.desc, ogImage = SITE.ogImage, className = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <!-- General Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta name="author" content={author} />

        <!-- Open Graph / Facebook -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />

        <!-- Google Font -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400;1,600&display=swap" rel="stylesheet" />
    </head>

    <body class={`${className} page`}>
        <div class={`${className} ${className ? `${className}__inner` : ""} page__inner`}>
            <Header />
            <div class="page__content">
                <slot />
                <CookieBanner />
            </div>
            <Footer />
        </div>
    </body>
</html>
